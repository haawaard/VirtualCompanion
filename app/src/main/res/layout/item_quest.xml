<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFEEE5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Quest Icon -->
        <ImageView
            android:id="@+id/questIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_quests"
            android:contentDescription="Quest Icon"
            android:layout_marginEnd="16dp" />

        <!-- Quest Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quest 1"
                android:textSize="18sp"
                android:textColor="#2C2C2C"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/questDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
                android:textSize="12sp"
                android:textColor="#6C6C6C"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Reward Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/questReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50"
                android:textSize="14sp"
                android:textColor="#2C2C2C"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_coin"
                android:contentDescription="Coin Reward" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>