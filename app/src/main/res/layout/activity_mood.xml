<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon -->

    <!-- App Title -->
    <!-- Settings Icon - Top Left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Settings"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Coins Display - Top Right -->
    <LinearLayout
        android:id="@+id/coinsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/coin_display_bg"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Coins"
            android:src="@drawable/ic_coin" />

    </LinearLayout>
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECHO"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />


    <!-- Pet Image -->

    <!-- Mood Prompt -->

    <ImageView
        android:id="@+id/mainPetImage"
        android:layout_width="410dp"
        android:layout_height="358dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Your Pet"
        android:elevation="6dp"
        android:src="@drawable/emotion_neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <TextView
        android:id="@+id/moodPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling right now?"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/mainPetImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

    <!-- Likert Scale Emoji Container -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/emoji_container_bg"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/moodPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Very Sad - 1 -->
        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/emoji_happy"
            android:layout_marginHorizontal="6dp"
            android:contentDescription="Very Sad"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/emoji_selector" />

        <!-- Sad - 2 -->
        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/emoji_happy"
            android:layout_marginHorizontal="6dp"
            android:contentDescription="Sad"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/emoji_selector" />

        <!-- Neutral - 3 -->
        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/emoji_happy"
            android:layout_marginHorizontal="6dp"
            android:contentDescription="Neutral"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/emoji_selector" />

        <!-- Happy - 4 -->
        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/emoji_happy"
            android:layout_marginHorizontal="6dp"
            android:contentDescription="Happy"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/emoji_selector" />

        <!-- Very Happy - 5 -->
        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/emoji_happy"
            android:layout_marginHorizontal="6dp"
            android:contentDescription="Very Happy"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/emoji_selector" />

    </LinearLayout>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:stateListAnimator="@null"
        android:foreground="@drawable/button_click_effect"
        app:backgroundTint="@null"
        android:background="@drawable/glass_button_selector"
        app:cornerRadius="30dp"
        app:elevation="12dp"
        app:strokeColor="#EEFFFFFF"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/emojiContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Statistics"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>